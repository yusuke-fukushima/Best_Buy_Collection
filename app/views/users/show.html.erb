<div class="container">
  <div class="row no-gutters">
    <div class="col-12 col-sm-12 col-md-12 col-lg-8 col-xl-8 mx-auto text-center shadow-lg px-0 my-5">
      <h4 class="text-dark bg-light py-4 mb-0"><strong><%= @user.name %>さんのプロフィール</strong></h4>
      <div class="p-4 bg-light">
        <div>
          <%= attachment_image_tag(@user, :profile_image, size: "100x100", fallback: "no_image.png") %>
        </div>
        <%= @user.name %>
        <%= @user.introduction %>
        <%= link_to "編集する", edit_user_path(@user.id), class:"btn btn-block btn-primary mt-5" %>
        <%= link_to "投稿する", new_item_path, class:"btn btn-block btn-primary mt-5" %>
      </div>
    </div>
  </div>
</div>