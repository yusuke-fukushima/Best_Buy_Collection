<% @items.each do |item| %>
  <div class="card mt-3">
    <div class="container">
      <div class="row no-gutters">
        <div class="col-4 mt-3">
          <%= link_to user_path(item.user), :style=>"color:black;" do %>
            <div>
              <%= attachment_image_tag(item.user, :profile_image, size: "50x50", fallback: "no_image.png") %>
            </div>
            <div class="mt-3">
              <%= item.user.name %>
            </div>
          <% end %>
        </div>
        <div class="col-8 mt-3">
          <%= link_to item_path(item), :style=>"color:black;" do %>
            <div>
              <%= attachment_image_tag(item, :item_image, size: "200x200", fallback: "no_image.png") %>
            </div>
            <div  class="mt-3">
              <%= item.purchase_time.strftime("%-mæœˆ") %>
              <%= item.name %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="container mt-3 mb-3">
      <div class="row no-gutters">
        <div class="col-8">
        </div>
        <% if user_signed_in? %>
        <div class="col-2">
          <%= render partial: 'favorites/favorite', locals: { item: item} %>
        </div>
        <% else %>
        <% end %>
        <div class="col-2">
          <%= link_to new_item_item_comment_path(item) do %>
            <i class="far fa-comment text-dark"></i>
          <% end %>
          <%= item.item_comments.count %>
        </div>
      </div>
    </div>
  </div>
<% end %>