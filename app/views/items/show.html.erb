<div class="container">
  <div class="row no-gutters">
    <div class="col-12 col-sm-12 col-md-8 col-lg-6 col-xl-6 mx-auto text-center shadow-lg rounded px-0 my-5">
      <h4 class="text-dark bg-light p-4 mb-0"><strong>投稿詳細</strong></h4>
      <div class="form-body p-4 bg-light">
        <div>
          <h5><strong><%= @item.purchase_time.strftime("%-m月") %>に買って良かった物</strong></h5>
        </div>
        <div class="mt-3">
          <%= attachment_image_tag(@item, :item_image, size: "300x300", fallback: "no_image.png") %>
        </div>
        <div class="mt-3">
          <%= @item.name %>
        </div>
        <div class="mt-3">
          <%= @item.introduction %>
        </div>
        <div class="mt-3">
          <%= Rinku.auto_link(@item.item_url, :all, 'target="_blank"').html_safe %>
        </div>
        <div class="container mt-3">
          <div class="row no-gutters">
            <div class="col-8">
            </div>
            <div class="col-2">
              <% if current_user.already_favorited?(@item) %>
                <%= link_to item_favorites_path(@item), method: :delete do %>
                  <i class="fas fa-heart text-danger"></i>
                <% end %>
              <% else %>
                <%= link_to item_favorites_path(@item), method: :post do %>
                  <i class="far fa-heart text-danger"></i>
                <% end %>
              <% end %>
              <%= @item.favorites.count %>
            </div>
            <div class="col-2">
              <%= link_to new_item_item_comment_path(@item) do %>
                <i class="far fa-comment text-dark"></i>
              <% end %>
              <%= @item.item_comments.count %>
            </div>
          </div>
        </div>
        <div>
          <% @item.item_comments.each do |item_comment| %>
            <p><%= item_comment.comment %></p>
            <hr>
          <% end %>
        </div>
      </div>
      </div>
    </div>
  </div>
</div>
